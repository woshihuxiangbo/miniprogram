.fans_title {
  display: flex;
  height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  background: #eee;
  align-items: center;
}

.hidden_box {
  font-size: 24rpx;
  color: #fff;
  width: 160rpx;
  height: 40rpx;
  background: #de635c;
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
  position: relative;
}

.fans_title image {
  width: 25rpx;
  height: 20rpx;
  margin-left: 20rpx;
  transition: all 0.2s linear;
}

.fans_title text:nth-of-type(1) {
  font-size: 28rpx;
  color: #333;
}

.tab {
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
}

.tab view {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.active {
  border-bottom: 4rpx solid #de635c;
  color: #de635c;
}

.tab view text {
  padding-bottom: 20rpx;
}

.content {
  display: flex;
  align-items: center;
}

.box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
}

.content_text {
  font-size: 28rpx;
  color: #333;
}

.content_box view:nth-of-type(2) {
  border: none;
}

.content image {
  border: 1rpx solid #666;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.content text {
  font-size: 28rpx;
  color: #333;
}

.fans_box {
  width: 160rpx;
  background: rgba(255, 255, 255, 0.1);
  position: absolute;
  top: 68rpx;
  left: 30rpx;
  transition: all 0.2s;
}

.fans_box view {
  height: 50%;
  background: white;
  font-size: 24rpx;
  color: #de635c;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border-bottom: 1rpx solid #f2f2f2;
  border-radius: 20rpx;
}

.more {
  transition: all 1s linear;
}

.animation {
  transform: rotate(180deg);
}

.Height{
  height: 0
}

.MoreHeight{
  height: 80rpx;
}