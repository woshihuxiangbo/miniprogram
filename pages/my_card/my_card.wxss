.mask {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
}

.container {
  overflow: hidden;
}

.card {
  position: relative;
  margin: 20rpx 0;
  font-family: sans-serif;
}

.bg, .txt {
  display: block;
  width: 690rpx;
  height: 890rpx;
  margin: 0 auto;
}

.txt {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.txt .avatar {
  position: absolute;
  left: 110rpx;
  top: 126rpx;
  width: 108rpx;
  height: 108rpx;
  border-radius: 8rpx;
}

.txt .qrcode {
  position: absolute;
  width: 72rpx;
  height: 72rpx;
  left: 128rpx;
  top: 250rpx;
}

.txt .logo {
  position: absolute;
  left: 292rpx;
  top: 600rpx;
  width: 104rpx;
  height: 104rpx;
  border-radius: 8rpx;
}

.txt .name {
  position: absolute;
  left: 370rpx;
  top: 144rpx;
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
  max-width: 280rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.txt .sign {
  position: absolute;
  left: 370rpx;
  top: 264rpx;
  font-size: 24rpx;
  max-width: 280rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.txt .phone {
  position: absolute;
  left: 370rpx;
  top: 334rpx;
  font-size: 24rpx;
}

.txt .tips {
  position: absolute;
  top: 760rpx;
  font-size: 24rpx;
  width: 100%;
  text-align: center;
}

.share_btn {
  width: 500rpx;
  height: 70rpx;
  background: #db665f;
  color: white;
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 20rpx;
  margin-top: 70rpx;
}
