/* pages/contact/contact.wxss */

page {
  font-size: 30rpx;
  background: #eee;
}
button {
  margin: 0;
  padding: 0;
  line-height: 1;
  background: transparent;
}
.tabbar {
  position: fixed;
  bottom: 0;
  background: #fff;
  width: 100%;
  height: 160rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.frame {
  height: 100vh;
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

.tabbar .tab_top text {
  display: inline-block;
  border: 2rpx solid #ccc;
  font-size: 26rpx;
  line-height: 40rpx;
  padding: 0 8rpx;
  border-radius: 20rpx;
  margin: 0 10rpx;
}

.tabbar .tab_bottom {
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tabbar .tab_bottom  textarea {
  width: 560rpx;
  background: #eee;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
}

.tabbar .tab_bottom .cry {
  display: block;
  width: 46rpx;
  height: 46rpx;
  flex-shrink: 0;
}

.tabbar .tab_bottom .add {
  display: block;
  width: 46rpx;
  height: 46rpx;
  flex-shrink: 0;
}
