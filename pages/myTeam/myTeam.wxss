/* pages/myTeam/myTeam.wxss */

page {
  width: 100%;
  min-height: 100%;
  font-size: 24rpx;
  color: #333;
}
button {
  margin: 0;
  padding: 0;
  line-height: 1;
  background: transparent;
}
.top {
  margin: 10rpx 24rpx 0;
  height: 388rpx;
  box-shadow: 0 10rpx 20rpx #ededed;
}

.top .bg {
  width: 100%;
  height: 100%;
  position: relative;
}

.top .bg .bg_color {
  background: #de635c;
  width: 100%;
  height: 100%;
  border-radius: 20rpx 20rpx 0 0;
}

.top .bg .bg_img {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 32rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.top .bg1 {
  display: block;
  width: 125rpx;
  height: 123rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}

.top .bg2 {
  display: block;
  width: 123rpx;
  height: 103rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.top  .content {
  position: absolute;
  top: 42rpx;
  left: 24rpx;
  right: 24rpx;
}

.top  .content .myHead {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  padding: 0 16rpx;
  height: 36rpx;
  line-height: 36rpx;
  background: #e8918d;
  border-radius: 18rpx;
  font-size: 20rpx;
}

.top  .content .avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 28rpx auto 20rpx;
}

.top  .content .name {
  font-size: 24rpx;
  text-align: center;
  margin: 0 auto;
}

.top .tab {
  display: flex;
  justify-content: space-around;
  margin-top: 46rpx;
  text-align: center;
}

.top .tab .num {
  padding-top: 18rpx;
  color: #de635c;
}

.list {
  padding: 40rpx 24rpx;
}

.list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #a4a4a4;
  height: 150rpx;
}

.list .avatar {
  display: block;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin-right: 30rpx;
}

.list .center {
  flex: 1;
}

.list .center .center_title {
  display: flex;
  align-items: center;
}

.list .center .center_title .name {
  display: inline-block;
  font-weight: bold;
  max-width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list .center .center_title .type {
  color: #df625c;
  border: 2rpx solid #de635c;
  height: 24rpx;
  border-radius: 12rpx;
  line-height: 24rpx;
  font-size: 16rpx;
  padding: 0 12rpx;
  margin: 0 10rpx;
}

.list .center .center_title .way {
  font-size: 20rpx;
}

.list .center .time {
  padding-top: 20rpx;
  font-size: 20rpx;
  color: #625f5f;
}

.list .right {
  flex-shrink: 0;
  position: relative;
  text-align: right;
  margin-left: 20rpx;
}

.list .right .blod {
  font-weight: bold;
}

.list .right .money {
  font-size: 20rpx;
  color: #625f5f;
  padding-top: 20rpx;
}

.list .right .money text {
  color: #de635c;
}

.list .more {
  width: 26rpx;
  height: 26rpx;
  margin: -40rpx 0 0 20rpx;
}
