.contaner {
  border-top: 1rpx solid #f2f2f2;
  padding: 30rpx;
}

.box {
  display: flex;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.box .goods_pic {
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid #f2f2f2;
  margin-right: 20rpx;
}

.goods_info {
  flex: 1;
}

.main_info, .sub_info {
  display: flex;
  flex: 1;
  justify-content: space-between;
}

.main_info {
  font-size: 28rpx;
}

.main_info .name {
  color: #333;
}

.main_info .price {
  color: #de635c;
}

.sub_info {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.form {
  font-size: 24rpx;
  color: #333;
  padding-bottom: 30rpx;
}

.form .area {
  padding: 30rpx 0;
  width: 100%;
  height: 110rpx;
}

.form .area_pl {
  font-size: 24rpx;
  color: #999;
}

.uppic .pic_btn {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid #f2f2f2;
  height: 120rpx;
  width: 120rpx;
  font-size: 20rpx;
  color: #999;
}

.uppic .pic_btn image {
  width: 55rpx;
  height: 55rpx;
}

.anonymity {
  height: 88rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #f2f2f2;
  border-bottom: 2rpx solid #f2f2f2;
  margin-top: 30rpx;
}

.anonymity .icon {
  width: 33rpx;
  height: 33rpx;
}

.btn {
  margin: 0 auto;
  margin-top: 100rpx;
  width: 500rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #de635c;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}
