.edit_store {
  padding: 30rpx;
  border-top: 2rpx solid #f2f2f2;
}

.edit_store .store_name, .edit_store .store_logo {
  display: flex;
  align-items: center;
}

.edit_store .store_name .label, .edit_store .store_logo .label {
  width: 165rpx;
  font-size: 28rpx;
  color: #333;
}

.edit_store .store_name .val {
  font-size: 28rpx;
  color: #333;
}

.edit_store .store_logo {
  margin-top: 35rpx;
}

.edit_store .store_logo .val {
  font-size: 24rpx;
  color: #625f5f;
}

.edit_store .logo_up {
  margin-top: 35rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.edit_store .logo_up .logo_pic {
  width: 200rpx;
  height: 200rpx;
  border-radius: 40rpx;
}

.edit_store .store_bgi {
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 38rpx;
}

.edit_store .store_bgi .header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 28rpx 0;
}

.edit_store .store_bgi .header .title {
  font-size: 28rpx;
  color: #333;
}

.edit_store .store_bgi .header .right {
  display: flex;
  color: #666;
}

.edit_store .store_bgi .header .right .val {
  font-size: 24rpx;
}

.edit_store .store_bgi .pic_box {
  display: flex;
  margin-top: 28rpx;
  justify-content: flex-start;
}

.edit_store .store_bgi .pic_box .pic_item {
  height: 130rpx;
  width: 222rpx;
  margin-right: 10rpx;
}

.edit_store .preview {
  border-bottom: 2rpx solid #f2f2f2;
  padding-bottom: 28rpx;
}

.edit_store .preview .preview_title {
  font-size: 28rpx;
  color: #333;
  margin: 28rpx 0;
}

.edit_store .preview .preview_pic {
  width: 487rpx;
  height: 285rpx;
}

.edit_store .in_item {
  border-bottom: 2rpx solid #f2f2f2;
}

.edit_store .in_item .in_tit {
  font-size: 28rpx;
  color: #333;
  margin-top: 28rpx;
  margin-bottom: 10rpx;
}

.edit_store .in_item .in_area {
  /* height: 140rpx; */
  margin-bottom: 50rpx;
}

.edit_store .in_item .in_area, .edit_store .in_item .in_place {
  font-size: 24rpx;
  color: #625f5f;
}

.edit_store .phone {
  border: none;
}

.edit_store .submit {
  width: 500rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 16rpx;
  background-color: #db665f;
  margin: 0 auto;
  margin-bottom: 80rpx;
}
