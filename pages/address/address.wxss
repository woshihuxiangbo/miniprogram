/* pages/address/address.wxss */

page {
  font-size: 28rpx;
}

button {
  margin: 0;
  padding: 0;
  line-height: 1;
  background: transparent;
}
.emptyTips{
  text-align: center;
  color: #999;
  line-height: 120rpx;
}
.kuang {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  border: 2rpx solid #b0a99e;
  flex-shrink: 0;
  margin-right: 10rpx;
}
.space{
  flex: 1;
}

.item {
  padding: 36rpx 30rpx 0;
  background: #fff;
}

.item .name {
  padding: 0 20rpx;
}

.item .name text {
  margin-left: 24rpx;
}

.item .adress {
  display: flex;
  align-items: baseline;
  font-size: 24rpx;
  color: #625f5f;
  padding: 20rpx 20rpx 30rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.item .adress .icon {
  display: block;
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.item .bottom {
  /* padding-top: 24rpx; */
  /* height: 48rpx; */
  display: flex;
  align-items: center;
  font-size: 24rpx;
  line-height: 88rpx;
  color: #625f5f;
}

.item .bottom>view {
  display: flex;
  align-items: center;
}

.item .bottom .selectIcon {
  display: block;
  width: 30rpx;
  height: 30rpx;
  flex-shrink: 0;
  margin-right: 10rpx;
}

.item .bottom .editIcon {
  display: block;
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
  padding-right: 10rpx;
}

.item .bottom .deleteIcon {
  display: block;
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
  padding-right: 10rpx;
}

.item .bottom .edit {
  margin-right: 20rpx;
}

.scroll {
  height: 80vh;
}

::-webkit-scrollbar {
  display: block;
  width: 8rpx;
  height: 8rpx;
  background-color: #e8e8e8;
}

::-webkit-scrollbar-thumb {
  border-radius: 4rpx;
  box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
}

.addadress {
  background: #fff;
}

.btn {
  background: #db665f;
  color: #fff;
  font-size: 28rpx;
  line-height: 60rpx;
  width: 500rpx;
  margin: 60rpx auto;
}
