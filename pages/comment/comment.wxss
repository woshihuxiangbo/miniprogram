/* pages/comment/comment.wxss */

page {
  font-size: 28rpx;
  color: #333;
}

button {
  margin: 0;
  padding: 0;
  line-height: 1;
  background: transparent;
}

.title {
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f2f2f2;
  color: #999;
  line-height: 68rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title .caricon {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.list .item {
  margin: 0 30rpx;
  border-bottom: 2rpx solid #f2f2f2;
  display: flex;
  align-items: flex-start;
  padding: 30rpx 0;
}

.list .item .avatar {
  display: block;
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.list .item .content {
  flex: 1;
}

.list .item .name {
  font-size: 24rpx;
  font-weight: bold;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list .item .info {
  height: 86rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list .item .type {
  font-size: 24rpx;
  color: #999;
}

.list .item .txt {
  font-size: 24rpx;
  line-height: 34rpx;
  color: #666;
}

.list .item .img {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.list .item .img image {
  display: block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.last {
  font-size: 24rpx;
  text-align: center;
  color: #999;
  line-height: 100rpx;
}
