/* Component/modal/modal.wxss */

.mask {
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99999;
}

.table {
  width: 80%;
  /* min-height: 500rpx; */
  background: #fff;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 999;
  border-radius: 26rpx;
  font-size: 24rpx;
  color: #333;
}
.table .auth_pic{
  display: block;
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin: 10rpx auto;
  margin-top: 50rpx;
}
.table .title {
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
}

.table .txt {
  padding: 0 30rpx;
}

.table .btn {
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
}

.table .btn .confirm {
  /* color: #de635c; */
  font-size: 30rpx;
  line-height: 60rpx;
  padding: 0 150rpx;
  /* border: 2rpx solid #de635c; */
  text-align: center;
  background-color: #de635c;
  color:#fff;
}
