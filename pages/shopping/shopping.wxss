/* pages/shopping/shopping.wxss */

page {
  font-size: 28rpx;
  color: #333;
}

button {
  margin: 0;
  padding: 0;
  line-height: 1;
  background: transparent;
}

.space {
  flex: 1;
}

.top {
  padding: 0 30rpx;
  background: #eee;
  display: flex;
  justify-content: space-between;
  line-height: 64rpx;
  color: #666;
  min-height: 64rpx;
}

.shop {
  margin: 0 30rpx 4rpx;
  padding: 0 30rpx;
  color: #625f5f;
  line-height: 64rpx;
  height: 64rpx;
  border-bottom: 2rpx solid #f2f2f2;
  font-size: 24rpx;
}

.kuang {
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #999;
  border-radius: 50%;
  flex-shrink: 0;
}

.list .shop .kuang {
  margin-right: 20rpx;
}

.list .item .kuang {
  margin: 60rpx 20rpx 60rpx 30rpx;
}

.kuang .okpic {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  margin-top: -8rpx;
}

.list .item {
  margin: 30rpx;
  padding: 30rpx;
  padding-left: 0;
  box-shadow: 0 0 15rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 26rpx;
  position: relative;
}

.list .item .flex {
  display: flex;
  align-items: center;
}

.list .item .thumb {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}
.list .item .timout {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: 74rpx;
  border-radius: 4rpx;
  background: rgba(0, 0, 0, 0.5);
}
.list .item .timout view {
  color: #fff;
  width: 115rpx;
  height: 115rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  font-size: 20rpx;
  line-height: 115rpx;
  text-align: center;
  white-space: nowrap;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.list .item .content {
  flex: 1;
}

.list .item .content .txt {
  padding-top: 10rpx;
  font-size: 24rpx;
  color: #625f5f;
}

.list .item .content .price {
  margin-top: 20rpx;
}

.list .item .content .newPrice {
  color: #df625c;
  font-size: 34rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.list .item .content .oldPrice {
  font-size: 20rpx;
  color: #625f5f;
  text-decoration: line-through;
}

.list .item .content .bottom {
  padding-top: 20rpx;
}

.list .item .content .discount {
  font-size: 24rpx;
  color: #625f5f;
}

.list .item .content .goodsNum {
  float: right;
}

.empty .empty_top {
  height: 60vh;
  overflow: hidden;
}

.empty .empty_top .emptyImg {
  display: block;
  width: 241rpx;
  height: 251rpx;
  margin: 10vh auto;
}

.empty .empty_top .emptyEmoji {
  display: block;
  width: 45rpx;
  height: 45rpx;
  margin-left: 20rpx;
}

.empty .empty_top .tips {
  font-size: 28rpx;
  color: #625f5f;
  display: flex;
  align-items: center;
  justify-content: center;
}

.orderFinish {
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
}

.orderFinish view:first-child {
  font-size: 34rpx;
  text-align: center;
}

.orderFinish view:last-child {
  margin-top: 22rpx;
  font-size: 24rpx;
  color: #656363;
  text-align: center;
}

.empty .recommend .title_1 {
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty .recommend .title_1 .txt {
  margin: 0 20rpx;
}

.empty .recommend .title_1 .line {
  height: 2rpx;
  width: 90rpx;
  background: #ebebeb;
}

.empty .recommend .title_2 {
  text-align: center;
  padding-top: 20rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.empty .recommend .list {
  padding: 0 30rpx 50rpx;
}

.empty .recommend .recommend_item .title {
  font-weight: bold;
  padding-bottom: 6rpx;
}

.empty .recommend .recommend_item .line {
  height: 2rpx;
  width: 70%;
  background: #f2f2f2;
}

.empty .recommend .list .thumb {
  width: 100%;
  height: 300rpx;
  margin: 30rpx 0 20rpx;
  border-radius: 8rpx;
}

.empty .recommend .list .txt {
  font-size: 20rpx;
  color: #666;
  line-height: 30rpx;
}

.empty .recommend .list .bottom {
  display: flex;
  align-items: center;
  height: 84rpx;
}

.empty .recommend .list .bottom .share {
  background: #de635c;
  color: #fff;
  font-size: 28rpx;
  height: 36rpx;
  border-radius: 18rpx;
  padding: 0 20rpx;
  line-height: 36rpx;
}

.empty .recommend .list .bottom .grow {
  flex: 1;
}

.empty .recommend .list .bottom .price {
  font-size: 32rpx;
  color: #de635c;
  font-weight: bold;
}

.empty .recommend .list .bottom .label {
  background: #de635c;
  color: #fff;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  padding: 0 12rpx;
  border-radius: 17rpx;
  margin-left: 30rpx;
}

.bought, .edit {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #e8e8e8;
}

.bought .tap, .edit .tap, .shop .tap {
  display: flex;
  align-items: center;
}

.shop .tap {
  position: absolute;
}

.edit {
  bottom: 0;
  justify-content: space-between;
}

.bought .kuang, .edit .kuang {
  margin: 30rpx 10rpx 30rpx 45rpx;
}

.bought .label, .edit .label {
  white-space: nowrap;
  flex-shrink: 0;
  font-size: 24rpx;
  color: #999;
}

.bought .price {
  padding-left: 30rpx;
  color: #999;
  flex: 1;
}

.bought .price text {
  font-size: 34rpx;
  font-weight: bold;
  color: #df625c;
}

.bought .price .tips {
  font-size: 16rpx;
  color: #625f5f;
  padding-top: 10rpx;
  white-space: nowrap;
}

.bought .btn {
  background: #df625c;
  color: #fff;
  font-size: 28rpx;
  line-height: 66rpx;
  border-radius: 20rpx;
  width: 250rpx;
}

.edit button {
  font-size: 28rpx;
  color: #de635c;
  border: 2rpx solid #de635c;
  line-height: 56rpx;
  min-width: 156rpx;
  border-radius: 12rpx;
  margin-left: 30rpx;
}

.edit button:last-child {
  margin-right: 20rpx;
}

.last {
  text-align: center;
  color: #999;
  line-height: 60rpx;
}

.paymethod {
  font-size: 20rpx;
  padding: 6rpx 10rpx;
  color: #de635c;
  background: #f6d6d4;
  float: right;
}
