.mask {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  z-index: 999;
}

.tip {
  font-size: 8px;
  color: #fff;
  position: absolute;
  left: 175px;
  top: 270px;
  
}

.tip_2 {
  font-size: 10px;
  position: absolute;
  left: 95px;
  top: 355px;
}

.img, .src {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 999;
  width: 260px;
  height: 400px;
  border-radius: 26rpx;
  overflow: hidden;
}
.src {
  overflow: visible;
}

.bg {
  display: block;
  position: absolute;
  width: 260px;
  height: 403px;
}

.avatar {
  position: absolute;
  display: block;
  width: 64px;
  height: 64px;
  border-radius: 50%;
  left: 21px;
  top: 293px;
}

.txt {
  position: absolute;
  left: 100px;
  top: 293px;
  font-size: 10px;
  line-height: 16px;
  color: #fff;
}

.txt .name {
  max-width: 150px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.txt .sign {
  max-width: 300rpx;
}

.src .thumb {
  display: block;
  width: 260px;
  height: 400px;
  border-radius: 26rpx;
}

.close {
  display: block;
  width: 49rpx;
  height: 49rpx;
  padding: 20rpx;
  position: absolute;
  z-index: 999;
  right: -70rpx;
  top: -70rpx;
}

.sa {
  position: absolute;
  left: 50%;
  bottom: -69rpx;
  transform: translateX(-50%);
  margin: 0;
  background: #fff;
  color: #de635c;
  font-size: 28rpx;
  line-height: 44rpx;
  padding: 0 36rpx;
  border-radius: 22rpx;
}

.avatar_2 {
  display: block;
  width: 64px;
  border-radius: 50%;
  height: 64px;
  position: absolute;
  left: 21px;
  top: 70px;
}

.txt_2 {
  position: absolute;
  left: 100px;
  top: 69px;
  font-size: 10px;
  line-height: 16px;
  color: #625f5f;
}

.txt_2 .name {
  color: #333;
  line-height: 24px;
  font-size: 13px;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.change {
  display: block;
  width: 54rpx;
  height: 54rpx;
  padding: 20rpx;
  border-radius: 50%;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
}
