/* pages/recharge/recharge.wxss */

page {
  font-size: 30rpx;
}
button {
  margin: 0;
  padding: 0;
  line-height: 1;
  background: transparent;
}
.money {
  padding: 30rpx 30rpx 6rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.money .num {
  display: flex;
  align-items: baseline;
  padding-top: 20rpx;
  line-height: 60rpx;
}

.money .num .icon {
  font-size: 36rpx;
}

.money .num input {
  flex: 1;
  font-size: 36rpx;
}

.money .num .tips {
  color: #999;
  font-size: 28rpx;
}

.packet {
  line-height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.way .title {
  line-height: 80rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.way .radio {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #f2f2f2;
  font-size: 30rpx;
}

.way .radio .icon {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.way .radio .txt {
  flex: 1;
}

.btn {
  background: #de635c;
  width: 600rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 64rpx;
  border-radius: 14rpx;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 30vh;
}
